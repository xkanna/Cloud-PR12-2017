@model IEnumerable<StageData.Stage>

@{
    ViewBag.Title = "Ispisi";
}

<h2>Ispisi</h2>

<p>
    @Html.ActionLink("Dodaj nov", "Izmene")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PartitionKey)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RowKey)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sifra)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PartitionKey)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RowKey)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sifra)
        </td>
        <td>
            @Html.ActionLink("Edit", "UpdateStages", new { Id = item.RowKey }) |
            @Html.ActionLink("Delete", "DeleteStage", new { Id=item.RowKey })
        </td>
    </tr>
}

</table>
