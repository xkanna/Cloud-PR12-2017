@model StageData.Artist

@{
    ViewBag.Title = "UpdateArtists";
}

<h2>UpdateArtists</h2>


<form action="~/Izmene/UpdateArtist">
    <div class="form-horizontal">
        <h4>Add Artist</h4>


        <label>Name:</label>
        <div class="form-group">


            <div class="col-md-10">
                <input type="text" required name="Name" />
            </div>

        </div>
        <label>Surname:</label>
        <div class="form-group">


            <div class="col-md-10">
                <input type="text" required name="Surname" />
            </div>

        </div>
        <label>Genre:</label>
        <div class="form-group">


            <div class="col-md-10">
                <input type="text" required name="Genre" />
            </div>

        </div>
        <label>Id:</label>
        <div class="form-group">


            <div class="col-md-10">
                <input type="number" required name="Id" />
            </div>

        </div>

        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="UpdateArtist" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
