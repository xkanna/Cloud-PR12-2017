@model StageData.Stage

@{
    ViewBag.Title = "UpdateStages";
}

<h2>UpdateStages</h2>


<form action="~/Izmene/UpdateStage">
    <div class="form-horizontal">
        <h4>Add Stage</h4>


        <label>Name:</label>
        <div class="form-group">


            <div class="col-md-10">
                <input type="text" required name="Name" />
            </div>

